<% if Setting.fee %>
  <% form_tag({:action => 'edit', :tab => 'notifications'}) do %>

    <div class="box tabular settings">

      <p><%= setting_text_field :register_days, :size => 6, :title => l(:label_register_days) %> <%= l(:label_day_plural) %>
      <br /><em><%= l(:label_register_days) %></em></p>

      <p><%= setting_text_field :renew_days, :size => 6, :title => l(:label_renew_days) %> <%= l(:label_day_plural) %>
      <br /><em><%= l(:label_renew_days) %></em></p>

      <p><%= setting_text_field :fee_bcc_recipients, :size => 60, :title => l(:label_fee_bcc_recipients) %><br />
<em><%= l(:label_fee_bcc_recipients) %></em></p>

    </div>

    <br />

<fieldset class="yui-skin-sam"><legend><%= l(:setting_emails_fee_proposal) %></legend>
<%= setting_text_area :template_fee_proposal, :label => false, :rows => 5 %>
<%= l(:label_emails_fee_proposal) %>
<div style="float:right;"  >
<%= link_to l(:label_send_test_email_fee_confirm), :controller => 'fees', :action => 'email_fee', :params => { :type => 'proposal'} %>
</div>
</fieldset>

<fieldset class="yui-skin-sam"><legend><%= l(:setting_emails_fee_register_asso) %></legend>
<%= setting_text_area :template_fee_register_asso, :label => false, :rows => 5 %>
<%= l(:label_emails_fee_register_asso) %>
<div style="float:right;">
<%= link_to l(:label_send_test_email_fee_asso), :controller => 'fees', :action => 'email_fee', :params => { :type => 'asso'} %>
</div>
</fieldset>

<fieldset class="yui-skin-sam"><legend><%= l(:setting_emails_fee_renew) %></legend>
<%= setting_text_area :template_fee_renew, :label => false,  :rows => 5 %>
<%= l(:label_emails_fee_renew) %>
<div style="float:right;">
<%= link_to l(:label_send_test_email_fee_renew), :controller => 'fees', :action => 'email_fee', :params => { :type => 'renew'} %>
</div>
</fieldset>

<fieldset class="yui-skin-sam"><legend><%= l(:setting_fee_thanks) %></legend>
<%= setting_text_area :template_fee_thanks, :label => false, :rows => 5  %>
<%= l(:label_fee_thanks) %>
<div style="float:right;">
<%= link_to l(:label_send_test_email_fee_thanks), :controller => 'fees', :action => 'email_fee', :params => { :type => 'thanks'} %>
</div>
</fieldset>

<%= submit_tag l(:button_save) %>
<% end %>

<% else %>
  <div class="nodata">
  <%= simple_format(l(:fee_not_abilitated)) %>
  </div>
<% end %>
<% content_for :header_yui do %>
    <%= stylesheet_link_tag 'yui/skin.css', :media => 'all' %>
    <%= javascript_include_tag "yui/yahoo-dom-event.js" %>
    <%= javascript_include_tag "yui/element-min.js" %>
    <%= javascript_include_tag "yui/container_core-min.js" %>
    <%= javascript_include_tag "yui/menu-min.js" %>
    <%= javascript_include_tag "yui/button-min.js" %>
    <%= javascript_include_tag "yui/editor-min.js" %>
    <%= javascript_include_tag "yui/yui_fs.js" %>
<% end %>

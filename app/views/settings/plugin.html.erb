<h2><%= l(:label_settings) %>: <%= h @plugin.name %></h2>

<div id="settings">
  <% form_tag({:action => 'plugin'}) do %>
      <div class="box tabular">
        <%= render :partial => @partial, :locals => {:settings => @settings} %>
      </div>
      <div class="btn-footer"><%= submit_tag l(:button_apply), :class => 'button-grey' %></div>
  <% end %>
</div>

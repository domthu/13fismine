<table width="560" border="0" cellpadding="0" cellspacing="0">
  <tr>
    <td width="500" bgcolor="#ffffff" align="right" style="padding-top: 14px ;">
      <font style="font-family:Tahoma,Arial, Helvetica, sans-serif; font-size:15px; color:#1e1e1e; line-height:18px; font-weight: bold;">
        <% if @user %>
            <%= user_myasso_text(@user) %>
        <% end %>
      </font>
    </td>
    <td width="60" valign="bottom" align="right"><div style="margin-top: -20px;">
      <% if @user %>
          <%= image_tag(user_myasso_icon(@user, :s, :only_path => false), :width => 48, :height => 48) %>
      <% end %></div>
    </td>
  </tr>
</table>
   <% if @user.convention &&  !@user.convention.nil? %>
    <table width="560" border="0" cellpadding="0" cellspacing="0">

      <% if !@user.convention.region_id.nil? && @user.convention.region_id > 0 %>
          <tr>
            <td width="40%" bgcolor="#ffffff" align="left" style="vertical-align: middle; padding: 2px 5px;">
              <font style="font-family:Arial, Helvetica, sans-serif; font-size:0.9em; color:#1e1e1e; line-height:14px; font-style:italic;">
                <%= l(:label_cross_organization) %>    </font></td>
            <td width="60%" align="left" style="font-weight: bold;">
              <% if !@user.convention.cross_organization.nil? %>
                <%= h @user.convention.cross_organization.name %>
              <% elsif !@user.cross_organization.nil? %>
                <%= h @user.cross_organization.name %>
              <% end %>
              <%= h @user.convention.get_zone %>
            </td>
          </tr>
      <% end %>
      <% if  @user.convention.presidente? %>
          <tr>
            <td width="40%" bgcolor="#ffffff" align="left" style="vertical-align: middle; padding: 5px;">
              <span style="font-family:Arial, Helvetica, sans-serif; font-size:0.9em; color:#1e1e1e; line-height:14px; font-style:italic;">
                <%= l(:label_presidente) %>    </span></td>
            <td width="60%" align="left" style="font-weight: bold;">
              <%= h @user.convention.presidente %>    </td>
          </tr>
      <% end %>
      <% if  @user.convention.indirizzo? %>
          <tr>
            <td width="40%" bgcolor="#ffffff" align="left" style="vertical-align: middle; padding: 2px 5px;">
              <font style="font-family:Arial, Helvetica, sans-serif; font-size:0.9em; color:#1e1e1e; line-height:14px; font-style:italic;">
                <%= l(:label_indirizzo) %>    </font></td>
            <td width="60%" align="left" style="font-weight: bold;">
              <%= h @user.convention.indirizzo %>    </td>
          </tr>
      <% end %>
      <% if !@user.convention.comune_id.nil? && @user.convention.comune_id > 0 %>
          <tr>
            <td width="40%" bgcolor="#ffffff" align="left" style="vertical-align: middle; padding: 2px 5px;">
              <font style="font-family:Arial, Helvetica, sans-serif; font-size:0.9em; color:#1e1e1e; line-height:14px; font-style:italic;">
                <%= l(:label_comune) %>    </font></td>
            <td width="60%" align="left" style="font-weight: bold;">
              <%= h @user.convention.comune.name %>    </td>
          </tr>
      <% end %>
      <% if  @user.convention.telefono? %>
          <tr>
            <td width="40%" bgcolor="#ffffff" align="left" style="vertical-align: middle; padding: 2px 5px;">
              <font style="font-family:Arial, Helvetica, sans-serif; font-size:0.9em; color:#1e1e1e; line-height:14px; font-style:italic;">
                <%= l(:label_telefono) %>    </font></td>
            <td width="60%" align="left" style="font-weight: bold;">
              <%= h @user.convention.telefono %>    </td>
          </tr>
      <% end %>
      <% if  @user.convention.telefono_alt? %>
          <tr>
            <td width="40%" bgcolor="#ffffff" align="left" style="vertical-align: middle; padding: 2px 5px;">
              <font style="font-family:Arial, Helvetica, sans-serif; font-size:0.9em; color:#1e1e1e; line-height:14px; font-style:italic;">
                <%= l(:label_telefono_alt) %>    </font></td>
            <td width="60%" align="left" style="font-weight: bold;">
              <%= h @user.convention.telefono_alt %>    </td>
          </tr>
      <% end %>
      <% if  @user.convention.fax? %>
          <tr>
            <td width="40%" bgcolor="#ffffff" align="left" style="vertical-align: middle; padding: 2px 5px;">
              <font style="font-family:Arial, Helvetica, sans-serif; font-size:0.9em; color:#1e1e1e; line-height:14px; font-style:italic;">
                <%= l(:label_fax) %>    </font></td>
            <td width="60%" align="left" style="font-weight: bold;">
              <%= h @user.convention.fax %>    </td>
          </tr>
      <% end %>
      <% if  @user.convention.email? %>
          <tr>
            <td width="40%" bgcolor="#ffffff" align="left" style="vertical-align: middle; padding: 2px 5px;">
              <font style="font-family:Arial, Helvetica, sans-serif; font-size:0.9em; color:#1e1e1e; line-height:14px; font-style:italic;">
                <%= l(:label_email) %>    </font></td>
            <td width="60%" align="left" style="font-weight: bold;">
              <%= h @user.convention.email %>    </td>
          </tr>
      <% end %>
    </table>
<% end %>

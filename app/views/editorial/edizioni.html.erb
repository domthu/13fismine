            </div>
        <% end %>
        <% if acur != aold %>
            <h4><span class="accordion">Edizioni nell' anno <%= acur.to_s %></span> </h4>
            <div>
        <% end %>
        <div class="fs-edizioni-all">
               <div class="fs-layout-cell layout-item-0">
                 <div class="fs-postheader fs-blockheader-ediz-all">Edizione <%= link_to(h(prj.description), url_for(:controller => 'editorial', :action => "edizione", :id => prj.id, :escape => false)) %>
                 </div>
               </div>
             </div>
        <% aold = acur %>
        <% x = true %>
    <% end %>
    </div>
  </div>
</div>  <!-- div in piï¿½ ma ok: loop in uscita -->

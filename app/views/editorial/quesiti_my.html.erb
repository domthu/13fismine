<div class="fs-layout-cell fs-content clearfix" style="width: 100%; position:relative;">
  <% if User.current && User.current.logged? %>
      <% if @quesiti_news.nil? %>
          <div> Non risultano quesiti posti da lei.
          </div>
      <% else %>
          <article class="fs-article fs-post-quesiti">
            <% @quesiti_news.each do |item| %>
                <div class="fs-convegni-border">
                  <div class="fs-quesiti-data">  <span>
                         Quesito di: <%= item.author unless !item.author %></span>
                    <span class="fs-quesiti-data-data"><%= I18n.localize(item.created_on.to_date, :format => :giorno_mese_anno) %>&nbsp; </span>
                  </div>
                  <div class="fs-quesiti-list">
                    <%= link_to(item.get_state_icons_fe, :controller => 'editorial', :action => "quesito_show", :id => item.id, :escape => false) %>
                    <span> <%= link_to(h(item.summary), :controller => 'editorial', :action => "quesito_show", :id => item.id, :escape => false) %></span>
                    <p>
                      <%= link_to(h(smart_truncate(item.description, 120)), :controller => 'editorial', :action => "quesito_show", :id => item.id, :escape => false) %>
                    </p>
                    <!--
                    <div class="fs-btn-center">
                      <%= link_to "Visualizza", url_for(:controller => 'editorial', :action => "quesito_show", :id => item.id, :escape => false), :class => "fs-vuoto-inline2-button" %>
                    </div>
                    -->
                    <br/> &nbsp;
                  </div>
                  <div class="clearfix"></div>
                </div>
            <% end %>
          </article>
      <% end %>
  <% else %>
      <pre style=color:red;>
  Gentile utente occorre essere autenticati per accedere a questa sezione.</pre>
  <% end %>
</div>

<h2><%= l(:details_edizione) %></h2>

<div style=" border: dotted 3px #add8e6 ; ">
  In questa pagina:
  <ul>
    <li>ID: <%= @id %></li>
    <li>PROJECT: <%= @project %></li>
    <li> NUM.ART:<%= @art.count %> </li>
  </ul>
  <br/>
</div>



<div style="font-family:Arial, Helvetica, sans-serif; text-align:left; margin:0; padding:0; border:0; cellspacing:0; cellpadding:0;">
<table width="100%" border="0" cellpadding="0" cellspacing="0" bgcolor="#bad3d9" style="font-size:12px; color:#424242; text-align:left;">
<tr>
  <td align="center">
    <table border="0" cellpadding="0" cellspacing="0">
      <tr>
        <td align="center" valign="top">

          <font style="font-family:Arial, Helvetica, sans-serif; font-size:11px; color:#333333;">la newsletter
            di
            Fiscosport &nbsp;|&nbsp;
            <a target="_blank" href="<%= @project %>" style="color:#333333; text-decoration:underline;"><font style="color:#333333;">L'edizione
              num. <%= @project %> <%# @project.description %>
              è online!</font></a></font>


        </td>
      </tr>
    </table>

  </td>
</tr>

<tr>
  <td align="center">
    <table width="656" border="0" cellpadding="0" cellspacing="0">
      <tr>
        <td align="center">
          <!--  inizio  riga immagine intestazione banner   superiore   -->
          <table width="656" border="0" cellpadding="0" cellspacing="0" style=" border-collapse: collapse!important; border:0; border-spacing: 0; font-size: 0; ">
            <tr>
              <td width="100%" align="left" valign="bottom">
                <%= image_tag("/images/commons/per-news.png") %>

              </td>
            </tr>
          </table>
          <!--  fine riga immagine intestazione banner   superiore   -->
          <!-- inizio primo contenitore  -->
          <table width="656" border="0" cellpadding="0" cellspacing="0">
            <tr>
              <td width="656" align="center" valign="top" bgcolor="ffffff">
                <!-- tabella con il bordo esterno perchè più piccola -->
                <table width="612" border="0" cellpadding="0" cellspacing="0">
                  <tr>
                    <td>
                      <!-- Inizio sezione con logo e nomeutente -->
                      <table width="612" border="0" cellpadding="0" cellspacing="0">
                        <tr>
                          <td width="238" height="80" align="right" valign="top">
                            <!-- logo -->
                            <%= link_to image_tag("/images/commons/logo-n.jpg", :border => 0, :controller => 'editorial', :action => 'home') %>
                          </td>
                          <td align="left" valign="top">
                            <!-- tabella di 2 righe per il testo -->
                            <table width="374" border="0" cellpadding="0" cellspacing="0">
                              <tr>
                                <td height="50" align="left" valign="center" style="border-bottom:1px solid #1C6693;">
                                  <font style="font-family:Arial, Helvetica, sans-serif; font-size:14px; color:#333333; line-height: 18px; ">
                                    Newsletter riservata a :<span style="font-size: 18px;">
                                    <%= User.current.firstname %> &nbsp; <%= User.current.lastname %></span>
                                  </font></td>
                              </tr>
                              <tr>
                                <td width="378" height="50" align="left" valign="center" style="border-bottom:1px solid #cccccc;">
                                  <font style="font-family:Arial, Helvetica, sans-serif; font-size:13px; color:#333333; line-height:18px; font-weight: bold;"> <%= User.current.soc %> </font>
                                </td>
                              </tr>
                            </table>
                            <!-- fine tabella di 2 righe per il testo -->
                          </td>
                        </tr>
                      </table>
                      <!-- fine sezione con logo e nomeutente -->
                      <!-- inizio visibile solo se associato (nb togliere il parametro height=30) -->
                      <table width="612" border="0" cellpadding="0" cellspacing="0">
                        <tr>
                          <td width="512" valign="center" bgcolor="#ffffff" height="50">
                            riga eventuale didascalia asso
                          </td>
                          <td width="100" valign="center" align="left">
                            logo asso small 50x 50
                          </td>
                        </tr>
                      </table>
                      <!-- fine riga visibile solo se associato -->
                      <!--inizio dicitura indice -->

                      <table width="612" border="0" cellpadding="0" cellspacing="0">
                        <tr>
                          <td width="612" align="center" valign="center" bgcolor="#343222" height="33">
                            <font style="font-family:Arial, Helvetica, sans-serif; font-size:16px; color:#ffffff;"><strong>Indice
                              degli argomenti</strong> </font>

                          </td>
                        </tr>
                      </table>
                      <!--fine  dicitura indice -->
                    </td>
                  </tr>
                </table>
              </td>
            </tr>
          </table>
          <table width="656" border="0" cellpadding="0" cellspacing="0" bgcolor="#ffffff">
            <tr>
              <td width="656" align="center" valign="top">

                <!-- inizio loop sezione indice -->
                <% last_tops=0
                   ancora =""%>
                <% @art.each do |nart| %>
                    <% ancora = h(truncate(nart.titolo, :length => 20).to_slug) %>

                <table width="612" border="0" cellpadding="0" cellspacing="0">
                <% if (last_tops != nart.section.top_section_id) %><br />
                  <tr>
                    <td width="612" align="right" valign="top" bgcolor="#f4f4f4" >

                      <table width="612" border="0" cellpadding="0" cellspacing="0">

                        <tr>
                          <td width="10%" height="20"  align="left" valign="center" style="border-bottom: solid 1px #AEAEAE; border-left: solid 2px #f9f9f9;"></td>
                          <td width="80%" align="center" valign="center" bgcolor="faffbd" style="border-top:solid 2px #E2DAAC;border-left: solid 1px #dedede;">
                            <font style="font-family:Arial, Helvetica, sans-serif; font-size:15px; color:#235893; line-height:20px;">
                               <!-- sezione -->
                              <strong> <%=  nart.section.to_s + '::' + (nart.section.nil? ? "? non trovata la sezione ?" : nart.section.top_section.to_s) %> </strong></font>
                          </td>
                          <td width="10%" height="20"  align="left" valign="center" style="border-bottom: solid 1px #AEAEAE; border-left: solid 2px #f9f9f9;"></td>
                        </tr>
                        <tr>
                          <td colspan="3" width="100%" height="2"  bgcolor="#cccccc" >
                        </tr>
                      </table>
                    </td>
                  </tr>
                <% end %>
                  <!-- titolo --->
                  <tr>
                    <td width="612">
                      <table width="600" border="0" cellpadding="0" cellspacing="7">
                        <tr>
                          <td width="40" bgcolor="#fff">
                          <%=link_to image_tag("/images/ico/fred-b.png", :border=>0), :anchor => ancora %>
                          </td>
                          <td  align="left" valign="center">

                            <font style="font-family:Arial, Helvetica, sans-serif; font-size:14px;">
                              <strong>   <%= link_to(h(nart.titolo ), url_for(:anchor => ancora), :style => 'color:#333333; text-decoration: none;') %> </strong></font><br/>
                          </td>
                        </tr>
                      </table>
                    </td>
                  </tr>
                  <!-- fine titolo --->
                </table>
                <%# end %>
                <% last_tops = nart.section.top_section_id %>
                <% end %>
                <!-- fine loop sezione indice -->


                <!-- BOTTOM --->

                <table width="486" border="0" cellpadding="0" cellspacing="0">
                  <tr>
                    <td width="612" height="5"></td>
                  </tr>
                </table>
                <table width="612" border="0" cellpadding="0" cellspacing="0">
                  <tr>
                    <td width="200" height="92" align="left" valign="top" bgcolor="#dfdfdf">
                      <font style="color:#333333;"><strong> bottom 1/3 </strong></font></td>
                    <td width="6"></td>
                    <td width="200" height="92" align="left" valign="top" bgcolor="#dfdfdf">
                      <font style="color:#333333;"><strong> bottom 2/3 </strong></font></td>
                    <td width="6"></td>
                    <td width="200" height="92" align="left" valign="top" bgcolor="#dfdfdf">
                      <font style="color:#333333;"><strong> bottom 3/3 </strong></font></td>
                  </tr>
                </table>
                <table width="486" border="0" cellpadding="0" cellspacing="0">
                  <tr>
                    <td width="612" height="15"></td>
                  </tr>
                </table>
              </td>
            </tr>
          </table>
        </td>
      </tr>
    </table>
  </td>
</tr>
<tr>
  <td align="center">
    <table width="602" border="0" cellpadding="10" cellspacing="0">
      <tr>
        <td align="center">
          <font style="font-family:Arial, Helvetica, sans-serif; font-size:10px; color:#343222;">Per
            migliorare la
            nostra operatività aziendale, stiamo consolidando i nostri servizi su internet
            .</font></td>
      </tr>
    </table>
  </td>
</tr>
</table>
</div>
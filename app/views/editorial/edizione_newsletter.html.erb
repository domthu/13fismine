    <td width="560" valign="bottom" bgcolor="#ffffff" height="6">
      <%= image_tag "/images/commons/email_spacer_colors.jpg", :width => 560, :height => 6, :border => 0 %>
    </td>
  </tr>
  <tr>
    <td width="560" valign="bottom" bgcolor="#ffffff" height="35">
      <%= image_tag "/images/commons/email_spacer.jpg", :width => 560, :height => 35, :border => 0 %>
    </td>

                        <h5 class="fs-postheader" > <%= articolo.titolo %>  </h5>
                      <div class="fs-postheadericons ">
                      <%= articolo.top_section  %> (<%= articolo.section.top_section.id  %>)<br />
                      <%= articolo.section  %> (<%= articolo.section.id  %>)<br />

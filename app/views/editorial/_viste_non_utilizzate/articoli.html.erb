<div class="fs-post-inner fs-article">
    <div class="fs-postcontent">
        <div class="fs-content-layout-wrapper layout-item-0">
            <div class="fs-content-layout">
                <div class="fs-content-layout-row">
                    <div class="fs-layout-cell layout-item-1">

                        <% @issues.each do |articolo| %>
                          <div class="art-contenitore">

                        <h5 class="fs-postheader" > <%= articolo.subject %>  </h5>
                      <div class="fs-postheadericons ">
                      <%= articolo.top_section  %> (<%= articolo.section.top_section.id  %>)<br />
                      <%= articolo.section  %> (<%= articolo.section.id  %>)<br />
                       <br />
                      Numero di articoli della sezione <%= articolo.section.issues.count  %> <br />
                        <%# avatar articolo.author_id, :size => "50" %> <%=h articolo.author %>
                      </div>
                        <br />
                      <div class="fs-postcontent" >   <%= articolo.summary %>
                      </div>

                             Â <span class="fs-button-wrapper">
                              <span class="fs-button-l"> </span>
                              <span class="fs-button-r"> </span>
                                      <%= link_to "Leggi >>> " ,  { :controller => 'issues', :action => 'show', :id => articolo.id }, :class => "fs-button" %>
                            </span>
                            <br /></div>
                        <% end %>
                    </div>
                 </div>
            </div>
        </div>
    </div>
 <div class="cleared"></div>
</div>

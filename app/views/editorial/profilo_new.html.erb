    <h2><%= :params[uid] %> </h2>
   <!--
    <p>

      <%= f.label :user_id %><br/>
      <%= f.text_field :user_id %>
    </p>
    -->
    <p>
      <%= f.label :titoli %><br/>
      <%= f.text_area :titoli %>
    </p>
    <p>
      <%= f.label :curriculum %><br/>
      <%= f.text_area :curriculum %>
    </p>
    <p>
      <%= f.label :immagine_url %><br/>
      <%= f.text_field :immagine_url %>
    </p>

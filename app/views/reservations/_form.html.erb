<%= f.error_messages %>

<div class="box tabular">
  <p><%= f.select :user_id, (User.all.collect {|c| [c.lastname + ' ' + c.firstname +  ' (' + c.login + ')', c.id]}), :include_blank => false, :required => true, :size => 60, :title => l(:label_user) %></p>
  <p><%= f.select :issue_id, (Issue.all_public_fs.solo_convegni.collect {|c| [c.subject, c.id]}), :include_blank => false, :required => true, :size => 60, :title => l(:label_issue) %></p>
  <p><%= f.text_field :num_persone, :label => :field_num_persone, :size => 3 %></p>
  <p><%= f.text_field :prezzo, :label => :field_prezzo, :size => 10 %></p>
  <p><%= f.text_area :msg, :label => :field_msg, :size => 10 %></p>
</div>

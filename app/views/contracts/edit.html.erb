<h2>Editing contract</h2>
<div id="footer-menu" class="box">
  <%= render_menu :menu_payment_fs %>
</div>
<% form_for(@contract) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :weight %><br />
    <%= f.text_field :weight %>
  </p>
  <p>
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </p>
  <p>
    <%= f.label :price_discount %><br />
    <%= f.text_field :price_discount %>
  </p>
  <p>
    <%= f.label :promo_price %><br />
    <%= f.text_field :promo_price %>
  </p>
  <p>
    <%= f.label :promo_price_discount %><br />
    <%= f.text_field :promo_price_discount %>
  </p>
  <p>
    <%= f.label :promote_to_frontpage %><br />
    <%= f.check_box :promote_to_frontpage %>
  </p>
  <p>
    <%= f.label :promo_date_start %><br />
    <%= f.datetime_select :promo_date_start %>
  </p>
  <p>
    <%= f.label :promo_date_end %><br />
    <%= f.datetime_select :promo_date_end %>
  </p>
  <p>
    <%= f.label :duration %><br />
    <%= f.text_field :duration %>
  </p>
  <p>
    <%= f.label :clicks %><br />
    <%= f.text_field :clicks %>
  </p>
  <p>
    <%= f.label :type %><br />
    <%= f.text_field :type %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @contract %> |
<%= link_to 'Back', contracts_path %>

<h2>Listing contracts</h2>
<div id="footer-menu" class="box">
  <%= render_menu :menu_payment_fs %>
</div>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>weight</th>
    <th>price</th>
    <th>price_discount</th>
    <th>promo_price</th>
    <th>promo_price_discount</th>
    <th>promote_to_frontpage</th>
    <th>promo_date_start</th>
    <th>promo_date_end</th>
    <th>duration</th>
    <th>clicks</th>
    <th>Type</th>
  </tr>

<% @contracts.each do |contract| %>
  <tr>
    <td><%=h contract.name %></td>
    <td><%=h contract.description %></td>
    <td><%=h contract.weight %></td>
    <td><%=h contract.price %></td>
    <td><%=h contract.price_discount %></td>
    <td><%=h contract.promo_price %></td>
    <td><%=h contract.promo_price_discount %></td>
    <td><%=h contract.promote_to_frontpage %></td>
    <td><%=h contract.promo_date_start %></td>
    <td><%=h contract.promo_date_end %></td>
    <td><%=h contract.duration %></td>
    <td><%=h contract.clicks %></td>
    <td><%=h contract.type %></td>
    <td><%= link_to 'Show', contract %></td>
    <td><%= link_to 'Edit', edit_contract_path(contract) %></td>
    <td><%= link_to 'Destroy', contract, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New contract', new_contract_path %>

<div class="contextual">
<%= link_to(l(:button_edit), edit_cross_group_path(@cross_group), :class => 'icon icon-edit') if User.current.admin? %>
<%= link_to(l(:button_delete),
      cross_group_path(@cross_group),
      :confirm => l(:text_are_you_sure),
      :method => :delete,
      :class => 'icon icon-del') if User.current.admin? %>
</div>
<h2><%= link_to l(:label_cross_group_plural), cross_groups_path %> &#187; <%=h @cross_group %></h2>
<div id="footer-menu" class="box">
  <%= render_menu :menu_table_fs %>
</div>

<div class="splitcontentleft">

<fieldset class="box tabular">
  <legend><%=l(:label_cross_group)%></legend>
    <p>
      <%= l(:label_convention) %>: <%= link_to(h(@cross_group.convention), convention_path(@cross_group.convention, :id => @cross_group.convention_id)) %>
    </p>

    <p>
      <%= l(:label_group_banner) %>: <%= link_to(h(@cross_group.group_banner), group_banner_path(@cross_group.group_banner, :id => @cross_group.group_banner_id)) %>
    </p>
    <p>
      <%= check_box_tag '', 1, @cross_group.se_visibile, :disabled => 'disabled'  %> <%= l(:label_se_visibile) %>
    </p>
</fieldset>
</div>

<div class="splitcontentright">
    <fieldset class="box tabular">
      <legend><%=l(:label_convention_group_banner)%></legend>
        <% if (@cross_group.convention.group_banners.any? && @cross_group.convention.group_banners.count() > 1) %>
        <table>
          <tr>
            <th><%=l(:label_group_banner)%></th>
          </tr>
          <% @cross_group.convention.group_banners.each do |related_banner|
                if (related_banner != @cross_group.group_banner) %>
                  <tr>
                    <td class="buttons">
                        <%= link_to(h(related_banner.espositore), group_banner_path(related_banner), :class => 'icon icon-summary')  if User.current.admin?   %>
                  </tr>
                <% end
          end %>
        </table>
        <% else %>
          <p class="nodata"><%= l(:label_convention_group_banner_none) %></p>
        <% end %>
    </fieldset>

    <fieldset class="box tabular">
      <legend><%=l(:label_group_banner_convention)%></legend>
        <% if (@cross_group.group_banner.assos.any? && @cross_group.group_banner.assos.count() > 1) %>
        <table>
          <tr>
            <th><%=l(:label_convention)%></th>
          </tr>
          <% @cross_group.group_banner.assos.each do |related_convention|
                if (related_convention != @cross_group.convention) %>
                  <tr>
                    <td class="buttons">
                        <%= link_to(h(related_convention), convention_path(related_convention), :class => 'icon icon-summary')  if User.current.admin?   %>
                  </tr>
                <% end
          end %>
        </table>
        <% else %>
          <p class="nodata"><%= l(:label_group_banner_convention_none) %></p>
        <% end %>
    </fieldset>
</div>

<h1>Listing invoices</h1>

<table>
  <tr>
    <th>User</th>
    <th>numero_fattura</th>
    <th>data_fattura</th>
    <th>sezione</th>
    <th>anno</th>
    <th>tariffa</th>
    <th>sconto</th>
    <th>iva</th>
    <th>pagamento</th>
  </tr>

<% @invoices.each do |invoice| %>
  <tr>
    <td><%=h invoice.user_id %></td>
    <td><%=h invoice.numero_fattura %></td>
    <td><%=h invoice.data_fattura %></td>
    <td><%=h invoice.sezione %></td>
    <td><%=h invoice.anno %></td>
    <td><%=h invoice.tariffa %></td>
    <td><%=h invoice.sconto %></td>
    <td><%=h invoice.iva %></td>
    <td><%=h invoice.pagamento %></td>
    <td><%= link_to 'Show', invoice %></td>
    <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
    <td><%= link_to 'Destroy', invoice, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />


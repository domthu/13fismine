<h2><%= link_to l(:label_invoice_plural), invoices_path %> &#187; <%= l(:label_invoice_new) %></h2>
<% labelled_form_for @invoice do |f| %>
    <%= render :partial => 'form', :locals => {:f => f} %>
    <p class="btn-footer">
      <%= link_to l(:button_cancel), invoices_path, :class => 'button-grey' %>
      &nbsp;&nbsp;&nbsp;&nbsp;
      <%= f.submit l(:button_create), :class=> 'button-blu'  %>
    </p>
<% end %>

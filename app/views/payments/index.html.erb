
<h2><%= l(:label_pagamento_metodo_plural) %></h2>
<style type="text/css">
    .ptable th, .ptable td {
        text-align: left;
        font-weight: bold;
        padding: 1em !important;
    }

    .ptable th {
        color: #006B92
    }
</style>
<table class="list ptable">
  <tr>

    <th style="width: 10%;">id</th>
    <th style="width: 20%;"><%= l(:label_abbrev) %></th>
    <th style="width: 65%;"><%= l(:label_payment) %></th>
    <th></th>
    <th>id</th>
  </tr>

  <% @payments.each do |payment| %>
      <tr>
        <td style="width: 10%;"><%= h payment.id.to_s %></td>
        <td style="width: 20%;"><%= h payment.abbrev %></td>
        <td style="width: 65%;"><%= h payment.pagamento %></td>
        <td class="buttons"><%= link_to('', edit_payment_path(payment), :class => 'icon icon-edit') if User.current.admin? %></td>
        <td class="buttons"><%= link_to ('', payment, :confirm => l(:text_are_you_sure), :method => :delete, :class => 'icon icon-del') if User.current.admin? %></td>
      </tr>
  <% end %>

</table>
<br/>
<p class="btn-footer">   <%= link_to 'Nuovo', new_payment_path, :class => "button-blu" %>     </p>

<%= javascript_include_tag "jquery",  "best_in_place" %>
<script type="text/javascript">
    $(document).ready(function() {
      /* Activating Best In Place */
      jQuery(".best_in_place").best_in_place();
    });
</script>
  <style type="text/css">
    .best_in_place textarea,.best_in_place input {
                           width: 100%;
    }
  </style>

<div class="contextual">
<%= link_to l(:label_type_organization_new), new_type_organization_path, :class => 'icon icon-add' %>
</div>

<h2><%= l(:label_type_organization_plural_long) %> <span style="font-size: 0.6em; color: #696969;"> &nbsp; (clicca sopra i campi di questa tabelle per modificare) </span></h2>


<% if @type_organizations.any? %>
<table class="list type_organizations">
  <thead><tr>
  <%= sort_header_tag('tipo', :title => l(:label_tipo), :style => 'width: 15%;text-align:left;')%>
    <%= sort_header_tag('descrizione', :title => l(:label_descrizione), :style => 'width: 70%;text-align:left;')%>
  <%= sort_header_tag('priorita', :title => l(:label_priorita), :style => 'width: 10%;text-align:left;')%>
  <th style='width: 5%;'></th>

  </tr></thead>
  <tbody>
<% @type_organizations.each do |type_organization| %>
  <tr class="<%= cycle 'odd', 'even' %>">
    <td><%= best_in_place type_organization , :tipo %></td>
    <td><%= best_in_place type_organization , :descrizione %></td>
    <td><%= best_in_place type_organization , :priorita %></td>
    <td class="buttons"><%= link_to ('', type_organization, :confirm => l(:text_are_you_sure), :method => :delete, :class => 'icon icon-del') if User.current.admin? %></td>
    <!--
    <td><%= link_to h(type_organization.tipo), type_organization_path(type_organization) %></td>
    <td align="right"><%=h type_organization.priorita %></td>
    <td class="buttons"><%= link_to('', edit_type_organization_path(type_organization), :class => 'icon icon-edit') if User.current.admin? %></td>
    <td class="buttons"><%= link_to ('', type_organization, :confirm => l(:text_are_you_sure), :method => :delete, :class => 'icon icon-del') if User.current.admin? %></td>
 -->
  </tr>
<% end %>
</table>

<% else %>
<p class="nodata"><%= l(:label_no_data) %></p>
<% end %>
<br />


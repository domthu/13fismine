</fieldset>
<% end %>
 <br />

<div class="autoscroll">
<table id="tblinvii" class="list">
  <thead><tr>
  <%= sort_header_tag('person', :caption => l(:field_user_fee), :style => 'width: 35%; text-align:left') %>
  <%= sort_header_tag('mail', :caption => l(:field_mail), :style => 'width: 15%; text-align:left;') %>
  <%= sort_header_tag('datascadenza', :caption => l(:field_data_scadenza), :default_order => 'desc', :style => 'width: 15%; text-align:left;') %>
  <%= sort_header_tag('role_id', :caption => 'Status', :default_order => 'desc', :style => 'width: 5%; text-align:left;') %>
  <%= sort_header_tag('convention_id', :caption => 'Conv.', :default_order => 'desc', :style => 'width: 50px; text-align:left;') %>

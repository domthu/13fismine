<div class="contextual">
<%= link_to(l(:button_edit), edit_organization_path(@organization), :class => 'icon icon-edit') if User.current.admin? %>
<%= link_to(l(:button_delete),
      organization_path(@organization),
      :confirm => l(:text_are_you_sure),
      :method => :delete,
      :class => 'icon icon-del') if User.current.admin? %>
</div>
<h2><%= link_to l(:label_organization_plural_long), organizations_path %> &#187; <%=h @organization %></h2>

<div class="splitcontentleft">
  <fieldset class="box tabular">
    <legend><%=l(:label_organization)%></legend>
    <p>
    <% unless @organization.asso.ragione_sociale.blank? %>
      <em><%= link_to h(@organization.asso.to_s), asso_path(@organization.asso, :id => @organization.asso_id) %>
</em>
      <br />
    <% end %>
    </p>
    <p class="<%= 'power_user' unless @organization.havePowerUser? %>">
      <%= l(:label_user) %>: <%= link_to h(@organization.user), user_path(@organization.user, :id => @organization.user_id) %>
    </p>
    <p>
      <%= l(:label_cross_organization) %>: <%= link_to h(@organization.cross_organization), cross_organization_path(@organization.cross_organization, :id => @organization.cross_organization_id) %>
    </p>
    <p>
        <%= check_box_tag '', 1, @organization.richiedinumeroregistrazione, :disabled => 'disabled'  %> <%= l(:label_richiedinumeroregistrazione) %>
    </p>
    <p>
      <%=l(:label_data_scadenza)%>: <%= format_date(@organization.data_scadenza) %>
    </p>
    <p>
      <%= l(:label_nota) %>: <%=h @organization.nota %>
    </p>
    <p>
      <%= l(:label_region) %>: <%=h @organization.region %>
    </p>
    <p>
      <%= l(:label_province) %>: <%=h @organization.province %>
    </p>
    <p>
      <%= l(:label_comune) %>: <%=h @organization.comune %>
    </p>
    <p>
      <%= l(:label_testo2) %>: <%=h @organization.testo2 %>
    </p>
    <p>
      <%= l(:label_testo3) %>: <%=h @organization.testo3 %>
    </p>
    <p class="hide">
      <%= l(:label_numero1) %>:
      <div class="wiki">
        <%# textilizable(@organization.numero1) %>
      </div>
    </p>
    <p class="hide">
      <%= l(:label_numero2) %>:
      <div class="wiki">
        <%# textilizable(@organization.numero2) %>
      </div>
    </p>
    <p class="hide">
      <%= l(:label_numero3) %>:
      <div class="wiki">
        <%# textilizable(@organization.numero3) %>
      </div>
    </p>
    <p>
      <%=l(:label_data1)%>: <%= format_date(@organization.data1) %>
    </p>
    <p>
      <%=l(:label_data2)%>: <%= format_date(@organization.data2) %>
    </p>
    <p>
      <%=l(:label_data3)%>: <%= format_date(@organization.data3) %>
    </p>
    <p>
        <%= check_box_tag '', 1, @organization.flag1, :disabled => 'disabled'  %> <%= l(:label_flag1) %>
    </p>
    <p>
        <%= check_box_tag '', 1, @organization.flag2, :disabled => 'disabled'  %> <%= l(:label_flag2) %>
    </p>
    <p>
        <%= check_box_tag '', 1, @organization.flag3, :disabled => 'disabled'  %> <%= l(:label_flag3) %>
    </p>
  </fieldset>
</div>

<div class="splitcontentright">
  <fieldset class="box tabular">
    <legend><%=l(:label_referente) %></legend>
    <% if @organization.referente %>
    <p>
      <%= link_to h(@organization.referente) unless User.current.admin? %>
      <%= link_to h(@organization.referente), edit_user_path(:id => @organization.referente) unless !User.current.admin? %>
    </p>
    <p>
        <%= check_box_tag '', 0, @organization.havePowerUser?, :disabled => 'disabled'  %> <%= l(:label_power_user) %>
    </p>
    <% else %>
      <p class="nodata"><%= l(:label_no_referente) %></p>
    <% end %>
  </fieldset>

  <fieldset class="box tabular">
    <legend><%=l(:label_assos_users)%></legend>
    <% associati = @organization.GetAssociati %>
    <% if associati.any? %>
      <%= l(:label_total) %>:<strong class="total center"><%= h associati.count %></strong>
      <table class="list users">
        <thead>
          <th><%= l(:label_user) %></th>
          <th><%= l(:field_due_date) %></th>
          <th>Power</th>
        </thead>
        <tbody>
        <% associati.each do |user| %>
          <tr id="user-<%= user.id %>" class="<%= cycle 'odd', 'even' %>">
            <td class="user">
              <%= link_to_user user unless User.current.admin? %>
              <%= link_to h(user), edit_user_path(:id => user) unless !User.current.admin? %>
            </td>
            <td>
              <%= format_date(user.scadenza) %>
            </td>
            <td>
              <%= check_box_tag '', 0, user.power_user, :disabled => 'disabled'  %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="nodata"><%= l(:label_no_soci) %></p>
    <% end %>
  </fieldset>
</div>

<div style="clear:both;"></div>

 <fieldset class="htmldraft">
      <legend><%= l(:label_numero2) %>:</legend>
      <% unless @organization.numero2.nil? %>
        <%= @organization.numero2.html_safe %>
      <% end %>
      <div class="wiki hide">
        <%# textilizable(@organization.numero2) %>
      </div>
  </fieldset>
</div>
<div >
 <fieldset class="htmldraft">
      <legend><%= l(:label_numero3) %>:</legend>
      <% unless @organization.numero3.nil? %>
        <%= @organization.numero3.html_safe %>
      <% end %>
      <div class="wiki hide">
        <%# textilizable(@organization.numero3) %>
      </div>
  </fieldset>
</div>

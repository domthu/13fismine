<div class="contextual">
<%= link_to(l(:button_edit), edit_organization_path(@organization), :class => 'icon icon-edit') if User.current.admin? %>
<%= link_to(l(:button_delete),
      organization_path(@organization),
      :confirm => l(:text_are_you_sure),
      :method => :delete,
      :class => 'icon icon-del') if User.current.admin? %>
</div>
<h2><%= link_to l(:label_organization_plural_long), organizations_path %> &#187; <%=h @organization %></h2>

<div class="splitcontentleft">
  <fieldset class="box tabular">
    <legend><%=l(:label_organization)%></legend>

    <p class="<%= 'power_user' unless @organization.havePowerUser? %>"><label>
      <%= l(:label_manager) %></label><span class="icon<%= @organization.user.icon() %>" ><%= link_to h(@organization.user), user_path(@organization.user, :id => @organization.user_id) %>
    </span></p>
    <p><label><%= l(:label_richiedinumeroregistrazione) %></label><span>
        <%= check_box_tag '', 1, @organization.richiedinumeroregistrazione, :disabled => 'disabled'  %>
    </span></p>
    <p><label>
      <%=l(:label_data_scadenza)%></label><span><%= format_date(@organization.data_scadenza) %>
    </span></p>
    <p><label>
      <%= l(:label_nota) %></label><span><%=h @organization.nota %>
    </span></p>
    <p><label>
      <%= l(:label_region) %></label><span><%=h @organization.region %>
    </span></p>
    <p><label>
      <%= l(:label_province) %></label><span><%=h @organization.province %>
    </span></p>
    <p><label>
      <%= l(:label_comune) %></label><span><%=h @organization.comune %>
    </span></p>
    <p><label>
      <%= l(:label_testo2) %></label><span><%=h @organization.testo2 %>
    </span></p>
    <p><label>
      <%= l(:label_testo3) %></label><span><%=h @organization.testo3 %>
    </span></p>
    <p class="hide"><label><%= l(:label_numero1) %></label><span>
      <div class="wiki">
        <%# textilizable(@organization.numero1) %>
      </div>
    </span></p>
    <p class="hide"><label><%= l(:label_numero2) %></label><span>
      <div class="wiki">
        <%# textilizable(@organization.numero2) %>
      </div>
    </span></p>
    <p class="hide"><label><%= l(:label_numero3) %></label><span>
      <div class="wiki">
        <%# textilizable(@organization.numero3) %>
      </div>
    </span></p>
    <p><label>
      <%=l(:label_data1)%></label><span><%= format_date(@organization.data1) %>
    </span></p>
    <p><label>
      <%=l(:label_data2)%></label><span><%= format_date(@organization.data2) %>
    </span></p>
    <p><label>
      <%=l(:label_data3)%></label><span><%= format_date(@organization.data3) %>
    </span></p>
    <p><label><%= l(:label_flag1) %></label><span>
        <%= check_box_tag '', 1, @organization.flag1, :disabled => 'disabled'  %>
    </span></p>
    <p><label><%= l(:label_flag2) %></label><span>
        <%= check_box_tag '', 1, @organization.flag2, :disabled => 'disabled'  %>
    </span></p>
    <p><label><%= l(:label_flag3) %></label><span>
        <%= check_box_tag '', 1, @organization.flag3, :disabled => 'disabled'  %>
    </span></p>
  </fieldset>

  <fieldset class="box tabular">
    <legend><%=l(:label_asso)%></legend>
      <% unless @organization.asso.nil? %>
        <%= link_to(h(@organization.asso.to_s), asso_path(@organization.asso), :class => 'icon icon-summary') if User.current.admin?   %>
        <%= h(@organization.asso.to_s) if !User.current.admin?   %>
      <% else %>
        <%=l(:label_asso_none)%>
      <% end %>
  </fieldset>

  <fieldset class="box tabular">
    <legend><%=l(:label_cross_organization)%></legend>
      <% unless @organization.cross_organization.nil? %>
        <%= link_to(h(@organization.cross_organization.name), cross_organization_path(@organization.cross_organization), :class => 'icon icon-globe icon-adjust-min') if User.current.admin?   %>
        <%= h(@organization.cross_organization.to_s) if !User.current.admin?   %>
      <% else %>
        <%=l(:label_cross_organization_none)%>
      <% end %>
  </fieldset>

</div>

<div class="splitcontentright">
  <fieldset class="box tabular">
    <legend><%=l(:label_referente) %></legend>
    <% if @organization.referente %>
    <p>
      <%= link_to h(@organization.referente) unless User.current.admin? %>
      <%= link_to h(@organization.referente), edit_user_path(:id => @organization.referente) unless !User.current.admin? %>
    </p>
    <p>
        <%= check_box_tag '', 0, @organization.havePowerUser?, :disabled => 'disabled'  %> <%= l(:label_power_user) %>
    </p>
    <% else %>
      <p class="nodata"><%= l(:label_no_referente) %></p>
    <% end %>
  </fieldset>

  <fieldset class="box tabular">
    <legend><%=l(:label_assos_users)%></legend>
    <% associati = @organization.soci %>
    <% if associati.any? %>
      <%= l(:label_total) %>:<strong class="total center"><%= h associati.count %></strong>
      <table class="list users">
        <thead>
          <th style="text-align:left;"><%= l(:label_user) %></th>
          <th style="text-align:left;"><%= l(:field_due_date) %></th>
          <th style="text-align:left;"><i class="icon icon-man" title="Power user, responsabile"></i></th>
        </thead>
        <tbody>
        <% associati.sort_by(&:lastname).each do |user| %>
          <tr id="user-<%= user.id %>" class="<%= cycle 'odd', 'even' %>">
            <td class="user icon<%= user.icon() %>">
              <%= link_to_user user unless User.current.admin? %>
              <%= link_to h(user), edit_user_path(:id => user) unless !User.current.admin? %>
            </td>
            <td>
              <%= format_date(user.scadenza) %>
            </td>
            <td>
              <%= check_box_tag '', 0, user.power_user, :disabled => 'disabled'  %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="nodata"><%= l(:label_no_soci) %></p>
    <% end %>
  </fieldset>
</div>

<div style="clear:both;"></div>

 <fieldset class="htmldraft">
      <legend><%= l(:label_numero1) %>:</legend>
      <% unless @organization.numero1.nil? %>
        <%= @organization.numero1.html_safe %>
      <% end %>
      <div class="wiki hide">
        <%# textilizable(@organization.numero1) %>
      </div>
  </fieldset>
</div>

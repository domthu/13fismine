<div class="contextual">
<%= link_to l(:label_top_section_new), new_top_section_path, :class => 'icon icon-add' %>
</div>

<h2><%= l(:label_top_section_plural) %></h2>

<% if @top_sections.any? %>
<table class="list top_sections">
  <thead><tr>
  <th><%=l(:label_top_section)%></th>
  <th><%=l(:label_ordinamento)%></th>
  <th><%=l(:label_immagine)%></th>
  <th><%=l(:label_style)%></th>
  <th><%=l(:label_se_visibile)%></th>
  <th></th>
  </tr></thead>
  <tbody>
<% @top_sections.each do |top_section| %>
  <tr class="<%= cycle 'odd', 'even' %>">
    <td><%= link_to h(top_section), edit_top_section_path(top_section) %></td>
    <td align="right"><%=h top_section.ordinamento %></td>
    <td><%=h top_section.immagine %></td>
    <td align="center"><%=h top_section.style %></td>
    <td align="center"><%=h top_section.se_visibile %></td>
    <td class="buttons"><%= link_to l(:button_delete), top_section, :confirm => l(:text_are_you_sure), :method => :delete, :class => 'icon icon-del' %></td>
  </tr>
<% end %>
</table>
<% else %>
<p class="nodata"><%= l(:label_no_data) %></p>
<% end %>

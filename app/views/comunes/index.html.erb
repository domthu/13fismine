<h2 style="display:inline-block; width: 100%;"><%=link_to 'Indice dei Comuni Italiani', comunes_path %>  </h2><span style="display: inline; position: absolute; left: 65%; margin-top: -30px;" > <%= link_to 'Aggiungi comune', new_comune_path, :class => 'icon icon-add' %></span>
 <div style="width: 100%;  background-color: #B6B6B6; text-align: center;" >
   <% ("A".."Z").map do |l|  %>
       <%= link_to(l, {:controller => 'comunes', :action=>'index' , :letter => l },  {:class => "button-grey " , :style => "margin: 4px;"} ) %>
   <% end %>

 </div>

<% if @comunes.count > 0 %>
<table>
  <tr style="text-align:left;">
    <th style="width: 55%;"><%=l :label_comune %></th>
    <th style="width: 15%;"><%=l :label_region %></th>
    <th style="width: 15%;"><%=l :label_province %></th>
    <th style="width: 5%;"></th>
    <th style="width: 5%;"></th>
  </tr>

<% @comunes.each do |comune| %>
  <tr>
    <td style="border: solid 1px #d3d3d3; font-weight: bold;"><%= link_to comune.name, comune %></td>
    <td> <%= select_tag 'region_id', options_for_select(Region.all.collect { |itm| [itm.name.upcase, itm.id] }, comune.region_id ),{:disabled=>true}  %></td>
    <td> <%= select_tag 'province_id', options_for_select(Province.all.collect { |itm| [itm.name, itm.id] }, comune.province_id ),{:disabled => true}  %></td>

      <td><%= link_to (l:button_edit), edit_comune_path(comune), :class => 'icon icon-edit' %>&nbsp;</td>
    <td><%= link_to (l:button_delete), comune, :confirm => 'Sei certo di voler eliminare?', :method => :delete, :class => 'icon icon-del' %></td>
  </tr>
<% end %>
</table>
    <% else %>
    <h1> Nessun comune inizia per <%= params[:letter] %>  </h1>
    <%	end  %>

<br />


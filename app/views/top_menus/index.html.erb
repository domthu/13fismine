<h1>Listing top_menus</h1>

<table>
  <tr>
    <th>Description</th>
    <th>order</th>
  </tr>

<% @top_menus.each do |top_menu| %>
  <tr>
    <td><%=h top_menu.description %></td>
    <td><%=h top_menu.order %></td>
    <td><%= link_to 'Show', top_menu %></td>
    <td><%= link_to 'Edit', edit_top_menu_path(top_menu) %></td>
    <td><%= link_to 'Destroy', top_menu, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

